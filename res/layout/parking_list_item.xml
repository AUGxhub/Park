<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imgParking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/strParkingName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="停车场" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/strDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="距离" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="米" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tx_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="剩余车位" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="/" />

            <TextView
                android:id="@+id/tx_sum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="总车位" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="支付方式" />

        <TextView
            android:id="@+id/strPayTool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="支付方式" />
    </LinearLayout>

</LinearLayout>